@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li style="display:flex;align-items:center;">
                <a href="#" data-toggle="dropdown" aria-expanded="false">
                    <i class="icon-user"></i>
                    @User.Identity.GetUserName()
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                    <li> <a href="/Manage"><i class="icon-settings"></i> Manage Account</a> </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-logout"></i> Cerrar sesión</a></li>
                </ul>
            </li>
            
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Account/Register"><i class="icon-user"></i>  Registrarse</a>
        </li>
        <li>
            <a href="/Account/Login"><i class="icon-login"></i> Iniciar sesión</a>
            @*@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                @Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
        </li>
    </ul>
}
